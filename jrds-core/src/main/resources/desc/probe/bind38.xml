<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE probedesc PUBLIC "-//jrds//DTD Probe Description//EN" "urn:jrds:probedesc">
<probedesc>
    <name>Bind38Xml</name>
    <probeName>bind</probeName>
    <probeClass>jrds.probe.HttpXml</probeClass>
    <specific name="startTimePath">/statistics/server/boot-time</specific>
    <specific name="currentTimePath">/statistics/server/current-time</specific>
    <specific name="timePattern">yyyy-MM-dd'T'HH:mm:ss.SSS'Z'</specific>
    <defaultargs>
        <attr name="port">8053</attr>
    </defaultargs>
    <!-- Name Server Statistics Counters -->
    <ds>
        <dsName>nsstat.Requestv4</dsName>
        <dsType>counter</dsType>
        <collect>/statistics/server/counters[@type="nsstat"]/counter[@name="Requestv4"]</collect>
    </ds>
    <ds>
        <dsName>nsstat.Requestv6</dsName>
        <dsType>counter</dsType>
        <collect>/statistics/server/counters[@type="nsstat"]/counter[@name="Requestv6"]</collect>
    </ds>
    <ds>
        <dsName>nsstat.ReqEdns0</dsName>
        <dsType>counter</dsType>
        <collect>/statistics/server/counters[@type="nsstat"]/counter[@name="ReqEdns0"]</collect>
    </ds>
    <ds>
        <dsName>nsstat.ReqBadEDNSVer</dsName>
        <dsType>counter</dsType>
        <collect>/statistics/server/counters[@type="nsstat"]/counter[@name="ReqBadEDNSVer"]</collect>
    </ds>
    <ds>
        <dsName>nsstat.ReqTSIG</dsName>
        <dsType>counter</dsType>
        <collect>/statistics/server/counters[@type="nsstat"]/counter[@name="ReqTSIG"]</collect>
    </ds>
    <ds>
        <dsName>nsstat.ReqSIG0</dsName>
        <dsType>counter</dsType>
        <collect>/statistics/server/counters[@type="nsstat"]/counter[@name="ReqSIG0"]</collect>
    </ds>
    <ds>
        <dsName>nsstat.ReqBadSIG</dsName>
        <dsType>counter</dsType>
        <collect>/statistics/server/counters[@type="nsstat"]/counter[@name="ReqBadSIG"]</collect>
    </ds>
    <ds>
        <dsName>nsstat.Response</dsName>
        <dsType>counter</dsType>
        <collect>/statistics/server/counters[@type="nsstat"]/counter[@name="Response"]</collect>
    </ds>
    <ds>
        <dsName>nsstat.QryAuthAns</dsName>
        <dsType>counter</dsType>
        <collect>/statistics/server/counters[@type="nsstat"]/counter[@name="QryAuthAns"]</collect>
    </ds>
    <ds>
        <dsName>nsstat.QryNoauthAns</dsName>
        <dsType>counter</dsType>
        <collect>/statistics/server/counters[@type="nsstat"]/counter[@name="QryNoauthAns"]</collect>
    </ds>
    <ds>
        <dsName>nsstat.QryNXDOMAIN</dsName>
        <dsType>counter</dsType>
        <collect>/statistics/server/counters[@type="nsstat"]/counter[@name="QryNXDOMAIN"]</collect>
    </ds>
    <ds>
        <dsName>nsstat.QryRecursion</dsName>
        <dsType>counter</dsType>
        <collect>/statistics/server/counters[@type="nsstat"]/counter[@name="QryRecursion"]</collect>
    </ds>
    <ds>
        <dsName>nsstat.QrySERVFAIL</dsName>
        <dsType>counter</dsType>
        <collect>/statistics/server/counters[@type="nsstat"]/counter[@name="QrySERVFAIL"]</collect>
    </ds>
    <ds>
        <dsName>nsstat.QrySuccess</dsName>
        <dsType>counter</dsType>
        <collect>/statistics/server/counters[@type="nsstat"]/counter[@name="QrySuccess"]</collect>
    </ds>
    <!-- Incoming Requests -->
    <ds>
        <dsName>opcode.query</dsName>
        <dsType>counter</dsType>
        <collect>/statistics/server/counters[@type="opcode"]/counter[@name="QUERY"]</collect>
    </ds>
    <ds>
        <dsName>opcode.iquery</dsName>
        <dsType>counter</dsType>
        <collect>/statistics/server/counters[@type="opcode"]/counter[@name="IQUERY"]</collect>
    </ds>
    <ds>
        <dsName>opcode.status</dsName>
        <dsType>counter</dsType>
        <collect>/statistics/server/counters[@type="opcode"]/counter[@name="STATUS"]</collect>
    </ds>
    <ds>
        <dsName>opcode.update</dsName>
        <dsType>counter</dsType>
        <collect>/statistics/server/counters[@type="opcode"]/counter[@name="UPDATE"]</collect>
    </ds>
    <ds>
        <dsName>opcode.notify</dsName>
        <dsType>counter</dsType>
        <collect>/statistics/server/counters[@type="opcode"]/counter[@name="NOTIFY"]</collect>
    </ds>
    <!-- Incoming Queries -->
    <ds>
        <dsName>q-in.a</dsName>
        <dsType>counter</dsType>
        <collect>/statistics/server/counters[@type="qtype"]/counter[@name="A"]</collect>
    </ds>
    <ds>
        <dsName>q-in.ptr</dsName>
        <dsType>counter</dsType>
        <collect>/statistics/server/counters[@type="qtype"]/counter[@name="PTR"]</collect>
    </ds>
    <ds>
        <dsName>q-in.aaaa</dsName>
        <dsType>counter</dsType>
        <collect>/statistics/server/counters[@type="qtype"]/counter[@name="AAAA"]</collect>
    </ds>
    <ds>
        <dsName>q-in.txt</dsName>
        <dsType>counter</dsType>
        <collect>/statistics/server/counters[@type="qtype"]/counter[@name="TXT"]</collect>
    </ds>
    <ds>
        <dsName>q-in.ns</dsName>
        <dsType>counter</dsType>
        <collect>/statistics/server/counters[@type="qtype"]/counter[@name="NS"]</collect>
    </ds>
    <ds>
        <dsName>q-in.mx</dsName>
        <dsType>counter</dsType>
        <collect>/statistics/server/counters[@type="qtype"]/counter[@name="MX"]</collect>
    </ds>
    <ds>
        <dsName>q-in.srv</dsName>
        <dsType>counter</dsType>
        <collect>/statistics/server/counters[@type="qtype"]/counter[@name="SRV"]</collect>
    </ds>
    <!-- Memory usage -->
    <ds>
        <dsName>mem.TotalUse</dsName>
        <dsType>gauge</dsType>
        <collect>/statistics/memory/summary/TotalUse</collect>
    </ds>
    <ds>
        <dsName>mem.InUse</dsName>
        <dsType>gauge</dsType>
        <collect>/statistics/memory/summary/InUse</collect>
    </ds>
    <ds>
        <dsName>mem.BlockSize</dsName>
        <dsType>gauge</dsType>
        <collect>/statistics/memory/summary/BlockSize</collect>
    </ds>
    <ds>
        <dsName>mem.ContextSize</dsName>
        <dsType>gauge</dsType>
        <collect>/statistics/memory/summary/ContextSize</collect>
    </ds>
    <ds>
        <dsName>mem.Lost</dsName>
        <dsType>gauge</dsType>
        <collect>/statistics/memory/summary/Lost</collect>
    </ds>
    <graphs>
        <name>BindServerQueries</name>
        <name>BindQueriesType</name>
    </graphs>
</probedesc>
